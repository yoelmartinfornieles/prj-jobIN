<h1>Job list</h1>

<div class='container'>

  <div class=`search`> 
    
    <form action = "#" method="GET">
    <button type="submit" class="btn btn-outline-primary">Search!</button>
  </div>

  <div class='row row row-cols-1 row-cols-sm-2 row-cols-md-1 g-5 my-5' id="main">
  {{!-- image name status --}}
    {{#each jobs}}

    <div class="card shadow-lg p-3 mb-5 bg-body rounded">
      <div class="card-header">
        {{locations.[0].name}}
      </div>
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{company.name}}</p>
        <form action = "/jobs/{{id}}" method="GET">
        <button type="submit" class="btn btn-outline-primary">Show more</button>
        </form>
      </div>
         <div class="card-footer text-muted">
            Date published: {{publication_date.day}}, {{publication_date.hour}}
         </div>
      </div>
    {{/each}}    
   </div>
</div>






