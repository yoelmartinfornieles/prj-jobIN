<div class="page-container">
  <div class="form">      
    <div class="tab-content">        
      <div id="login">   
        <h1 class="main-message">Register Here</h1>   
         <form class="login" action="/auth/signup" method="POST">
            <div class="field-wrap">
               <p>Please fill in the details to create an account with us.</p>
               <hr>
               <label for="username"><b>Enter Username</b></label>
               <input class="form-control registration" type="text" placeholder="Username" name="username">
               <label for="pwd"><b>Password</b></label>
               <input class="form-control registration" type="password" placeholder="Enter Password" name="password">
               <label for="email"><b>Enter email</b></label>
               <input class="form-control registration" type="text" placeholder="Email" name="email">
               <label for="studies"><b>Enter studies</b></label>
               <input class="form-control registration" type="text" placeholder="Studies" name="studies">
               <label for="experience"><b>Enter experience</b></label>
               <input class="form-control registration" type="text" placeholder="Experience" name="experience">
               <label for="skills"><b>Enter skills</b></label>
               <input class="form-control registration" type="text" placeholder="Skills" name="skills">
               <label for="avatar"><b>Enter your avatar URL</b></label>
               <input class="form-control registration" type="text" placeholder="URL" name="avatar">
               <hr>
               <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
               <button type="submit" class="btn btn-x btn-outline-warning btn-md registerbtn"><strong>Register</strong></button>
               </div>
               <div class="field-wrap">
                  <p>Already have an account? 
                     <div id = "otherbuttons" class="otherbutton">
                        <a class="nav-link-dark" href="/auth/login">Sign in</a>
                     </div>
                  </p>
               </div>
            </div>
         </form>
        </div>    
      </div>    
   </div>
   {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
   {{/if}}
</div>
